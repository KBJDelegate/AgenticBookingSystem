# Node Environment
NODE_ENV=development
PORT=3001

# Azure AD Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Microsoft Bookings
BOOKING_BUSINESS_ID=your-booking-business-id
BOOKING_BUSINESS_ID_B1=business-id-for-brand-b1
BOOKING_BUSINESS_ID_B2=business-id-for-brand-b2

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# JWT Secret for session tokens
JWT_SECRET=your-jwt-secret-key

# Azure Storage (for documents)
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=booking-documents

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=noreply@kfinsurance.com
SMTP_PASS=your-email-password

# Logging
LOG_LEVEL=info